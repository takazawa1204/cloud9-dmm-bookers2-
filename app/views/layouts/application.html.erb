<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/53794c647f.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler text-muted" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to ' Home', user_path(current_user.id), class: 'fas fa-home nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to ' Users', href="/users", class: 'fas fa-users nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to ' Books', href="/books", class: 'fas fa-book-open nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to " logout", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-al nav-link text-white' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to ' Home', href="/", class: 'fas fa-home nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to " About", href="/home/about", class: 'fas fa-link nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to " Sign Up", new_user_registration_path, class: 'fas fa fa-user-plus nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to " Log in", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-white' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container px-5 px-sm-0">
        <%= yield %>
      </div>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
