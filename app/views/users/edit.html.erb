<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
  <h2>User info</h2>
  
  <div id="error_explanation">
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
  </div>
  
  <%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true, id:"username", :class => 'form-control' %>
    </div>
    <div class="form-group">
      <label for="user_Image">Image</label>
      <%= f.attachment_field :profile_image, id:"profile_image", placeholder: "プロフィール画像", :class => 'form-control-file' %>
    </div>
    <div class="form-group">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"user_introduction", :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "Update User", :class => 'btn btn-secondary'  %>  
    </div>

  <% end %>
</div>
