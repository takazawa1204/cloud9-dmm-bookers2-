<div class="row">
  <div class="col-md-3">
    <%= render 'books/info' %>


    <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
    <i class="fas fa-user-cog"></i>
    <% end %>


    <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label>Title</label>
    　     <%= f.text_field :title, :class => 'form-control'%>
        </div>
        <div class="form-group">
          <label>Opinion</label>
    　     <%= f.text_area :body, :class => 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', :class => 'btn btn-success' %>
        </div>
      <% end %>
  </div>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 56, format: 'jpeg', fallback: "no_image.jpg" %>
              <br><%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to edit_book_path(@book), class: 'btn btn-sm btn-success' do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book), method: :delete, class: 'btn btn-sm btn-danger' do %>
                Destroy
              <% end %>
            </td>
          <% end %>
          <td>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>