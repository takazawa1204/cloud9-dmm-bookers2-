<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
  <h1>Editing Book</h1>
  <div id="error_explanation">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
  </div>
  
  <%= form_with model:@book, local:true do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, autofocus: true, id:"booktitle",  :class => 'form-control' %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, autofocus: true, id:"bookopinion",  :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Update Book", :class => 'btn btn-success'  %>  
    </div>
  <% end %>
  <%= link_to @book do %>
    Show
  <% end %>
  |
  <%= link_to "/books" do %>
    Back
  <% end %>
</div>
